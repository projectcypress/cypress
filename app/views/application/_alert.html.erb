<%
 #locals
 confirmation ||= false
 alert_type ||= 'info'
 messages
%>

<% alert_icon = case alert_type
                when 'success'
                  'check-circle'
                when 'warning'
                  'exclamation-triangle'
                when 'danger'
                  'exclamation-circle'
                else
                  'info-circle'
                end %>

<!-- Alerts are either dismissable or confirmable. NOT BOTH -->
<% if confirmation %>
  <div class="clearfix alert alert-<%= alert_type %> fade show" role="alert" aria-live="polite">
    <div class="iconSpan float-sm-start">
      <%= icon('fas fa-fw fa-2x', alert_icon) %>

    </div>
    <div class="alertContent float-sm-start">
      <% [*messages].each do |msg| %>
        <p><%= msg %></p>
      <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"><%= confirmation %></button>
    </div>
  </div>

<% else %>
  <div class="clearfix alert alert-<%= alert_type %> alert-dismissible fade show" role="alert" aria-live="polite">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span class="sr-only">Close alert</span></button>

    <div class="iconSpan float-sm-start">
      <%= icon('fas fa-fw fa-2x', alert_icon) %>
    </div>
    <div class="alertContent float-sm-start">
      <% [*messages].each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  </div>

<% end %>
