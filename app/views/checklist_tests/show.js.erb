<% if params[:partial] == 'checklist_measures' %>
  <% if @product_test.tasks[0].most_recent_execution.incomplete? %>
    setTimeout(function(){
        $('#display_checklist_measures').html("<%= escape_javascript render 'checklist_measures', :product_test => @product_test, :product => @product_test.product, :measures => @measures %>");
      }, 2000);
   <% else %>
        $('#display_checklist_measures').html("<%= escape_javascript render 'checklist_measures', :product_test => @product_test, :product => @product_test.product, :measures => @measures %>");
   <% end %>
<% elsif params[:partial] == 'checklist_status_display' %>
  <% if @product_test.tasks[0].most_recent_execution.incomplete? %>
   setTimeout(function(){
      $('#display_checklist_status').html("<%= escape_javascript render 'checklist_status_display', :product => @product_test.product %>");
    }, 2000);
   <% else %>
      $('#display_checklist_status').html("<%= escape_javascript render 'checklist_status_display', :product => @product_test.product %>");
   <% end %>
<% elsif params[:partial] == 'checklist_execution_results' %>
  <% if params[:task_id] %>
    <% if @task.most_recent_execution && @task.most_recent_execution.executions_pending? %>
      setTimeout(function(){
        $('#display_checklist_execution_results').html("<%= escape_javascript render 'checklist_execution_results', :task => @task %>");
      }, 2000);
    <% else %>
      $('#display_checklist_execution_results').html("<%= escape_javascript render 'checklist_execution_results', :task => @task %>");
    <% end %>
  <% end %>
<% end %>
