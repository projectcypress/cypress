<div class="vendors edit_vendor_page col-sm-12">

  <%= render :partial => 'alerts', locals: { object: @vendor } %>

  <!-- show popup with a button -->
  <button type = "button" class = "btn btn-danger pull-right" data-toggle = "modal" data-target = "#remove_modal">Remove Vendor</button>

  <!-- popup for removing vendors  -->
  <div id = "remove_modal" class = "modal fade" role = "dialog">
    <div class = "modal-dialog">
      <div class = "modal-content">
        <div class = "modal-header">
          <button type = "button" class = "close" data-dismiss = "modal">&times;</button>
          <h4 class = "modal-title">Warning</h4>
        </div>
        <div class = "modal-body">
          <p>Removing a vendor will also delete all associated products, tests, and points of contact.</p>
          <p>Enter the vendor name <strong id = "popup_vendor_name"><%= @vendor.name %></strong> to delete vendor.</p>
          <p><input id = "popup_text_field" type = "text-field" class = "form-control" placeholder = "Vendor Name"/></p>
        </div>
        <div class = "modal-footer">
          <%= button_to "Remove Vendor", @vendor, :method => "delete", :class => "btn btn-danger pull-right", :disabled => true, :id => "popup_remove_vendor_button" %>
          <button type = "button" class = "btn btn-default pull-right" data-dismiss = "modal">Close</button>
        </div>
      </div>

    </div>
  </div>

  <%= render :partial => 'vendor_form', locals: {submit_text: 'Submit Changes'} %>

</div>
