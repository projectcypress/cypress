<%
  # local variables:
  #
  #   banner_message, smtp_settings, default_url_options, mode, mode_settings, debug_features
%>
<% if server_needs_restart %>
  <%= render :partial => 'alert', locals: { alert_type: 'warning', messages: 'Please restart your Cypress service or reboot your Cypress instance when convenient in order to apply settings.' } %>
<% end %>

<div class="settings-tabs">
  <ul>
    <% ['application_settings', 'user_management', 'bundles', 'application_status'].each do |target_id| %>
      <li><a href = '#<%= target_id %>'><%= target_id.humanize.titleize %></a></li>
    <% end %>
  </ul>

  <div id="application_settings">
    <%= render partial: "show_settings", locals: { banner_message: banner_message, warning_message: warning_message, banner: banner, smtp_settings: smtp_settings, default_url_options: default_url_options, mode: mode, mode_settings: mode_settings, debug_features: debug_features, server_needs_restart: server_needs_restart } %>
  </div>

  <div id="user_management" >
    <%= render partial: "user_list" %>
  </div>

  <div id="bundles">
    <div id="display_bundle_list" >
      <%= render partial: "bundle_list"%>
    </div>
    <%= render partial: 'remove_modal' %>
  </div>

  <div id="application_status" >
    <%= render partial: 'application_status' %>
  </div>

</div>
