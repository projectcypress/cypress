/* We need full paths to get custom fonts to render in the PDF. */
/* Therefore we use an ERB to generate the URLs */

@font-face {
  font-family: 'NotoSans';
  src: url('<%= Rails.application.assets.find_asset('NotoSans-Regular.ttf').pathname %>') format("truetype");
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: 'NotoSans';
  src: url('<%= Rails.application.assets.find_asset('NotoSans-Bold.ttf').pathname %>') format("truetype");
  font-weight: 700;
  font-style: normal;
}

@font-face {
  font-family: 'FontAwesome';
  src: url('<%= Rails.application.assets.find_asset('fontawesome-webfont.eot').pathname %>'),
      url('<%= Rails.application.assets.find_asset('fontawesome-webfont.woff').pathname %>') format('woff'),
      url('<%= Rails.application.assets.find_asset('fontawesome-webfont.ttf').pathname %>') format('truetype'),
      url('<%= Rails.application.assets.find_asset('fontawesome-webfont.svg').pathname %>') format('svg');
  font-weight: normal;
  font-style: normal;
}

<%= Rails.application.assets.find_asset('font-awesome-edited.css').to_s.html_safe %>

<%= Rails.application.assets.find_asset('pdf.css').to_s.html_safe %>
