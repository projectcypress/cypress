<%

# local variables:
#
#   title   (String)
#   tasks   (Array of tasks)

%>

<% return unless tasks && tasks.any? %>

<h2><%= title %></h2>

<ul>
  <% tasks.each do |task| %>
    <li>
      <% task.product_test.options.filters.each_with_index do |(key, val), index| %>
        <%= ' , ' unless index.zero? %>
        <strong><%= "#{key.titleize}: " %></strong><%= display_filter_val(key, task.bundle.randomization, val) %>
      <% end %>
    </li>
  <% end %>
</ul>
