<section>
  <h1>C4 - Filtering</h1>

  <% # C4 Cat 1 Not Started Measure Tests %>
  <% c4_cat1_not_started_tasks = @product.product_tests.filtering_tests.collect { |test| test.cat1_task if test.task_status('Cat1FilterTask') == 'incomplete' }.compact %>
