<%

# local variable 'task'. must be a FilteringTest

%>

<p class="description">Remove any patients not meeting the following criteria.</p>
<% task.product_test.options.filters.map do |filter_name, val| %>
  <dl class="filters-list">
    <dt><%= display_filter_title(filter_name, task) %></dt>
    <dd>
      <% filter_values = display_filter_val(filter_name, val) %>
      <% filter_values.each do |filter_val| %>
        <% if filter_val.is_a?(Hash) %>
          <% filter_val.each_pair do |value_key, value_val| %>
            <p><strong><%= value_key %></strong>
            <%= value_val %></p>
          <% end %>
        <% else %>
          <%= filter_val %>
        <% end %>
      <% end %>

    </dd>
  </dl>
<% end %>
